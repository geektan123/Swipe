<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/curvy_background"
    android:clipToPadding="false"
    android:clipChildren="true"
    android:outlineProvider="background"
    android:clipToOutline="true">

    <!-- Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Product"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:paddingBottom="12dp"/>

    <!-- Product Type Dropdown -->
    <Spinner
        android:id="@+id/spinnerProductType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@drawable/rounded_input_background"/>

    <!-- Product Name -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/edtProductNameContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@drawable/rounded_input_background">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtProductName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Product Name"
            android:inputType="text"
            android:padding="12dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Product Price -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/edtProductPriceContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@drawable/rounded_input_background">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtProductPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Selling Price"
            android:inputType="numberDecimal"
            android:padding="12dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Product Tax -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/edtProductTaxContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@drawable/rounded_input_background">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtProductTax"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tax Rate (%)"
            android:inputType="numberDecimal"
            android:padding="12dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Image Selection -->
    <FrameLayout
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="32dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/rounded_image_background">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/shapeable_image_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/rounded_card_grey_background"
            android:scaleType="centerCrop"
/>

        <ImageView
            android:id="@+id/plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/plus_icon" />
    </FrameLayout>

    <!-- Submit Button with Progress Indicator -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center"
        android:layout_marginTop="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginHorizontal="20dp"
            android:layout_height="48dp"
            android:gravity="center"
            android:id="@+id/Nextlay"
            android:background="@drawable/rounded_button_background">

            <TextView
                android:id="@+id/upload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Upload"
                android:textSize="16dp"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <!-- Submit Button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center"
        android:layout_marginTop="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginHorizontal="20dp"
            android:layout_height="48dp"
            android:gravity="center"
            android:id="@+id/Next"
            android:background="@drawable/rounded_button_background">

            <TextView
                android:id="@+id/Nexttext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Next"
                android:textSize="16dp"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
